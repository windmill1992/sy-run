/* pages/adv/adv.wxss */

.pageContainer, .adv{
	width: 100%;
	height: 100%;
	overflow: hidden;
	position: relative;
	background: #fff;
}

.adv image{
	width: 100%;
}

.adv .btn{
	width: 160rpx;
	height: 50rpx;
	background: rgba(0, 0, 0, .6);
	color: #fff;
	font-size: 24rpx;
	text-align: center;
	line-height: 50rpx;
	border-radius: 50rpx;
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	opacity: .7;
}