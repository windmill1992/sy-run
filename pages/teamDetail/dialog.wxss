/*弹出框*/

.dialog {
  text-align: center;
  position: fixed;
  z-index: 100;
  display: none;
}

.dialog.show {
  display: block;
  perspective: 1800rpx;
}

.dialog.hide {
  animation: a-dialog-mask-out 0.2s ease both;
}

.dialog, .dialog .mask {
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.dialog .mask {
  position: absolute;
  background: rgba(0, 0, 0, 0.7);
}

.dialog .dialog_inner {
  padding: 48rpx 40rpx;
  background: #fff;
  width: 85%;
  box-sizing: border-box;
  max-width: 500px;
  border-radius: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0) rotateY(-90deg);
}

.dialog.show .dialog_inner {
  animation: a-dialog-in 0.4s ease 0.1s both;
}

.dialog.hide .dialog_inner {
  animation: a-dialog-out 0.2s ease both;
}

.dialog .run_dialog_inner {
  padding: 30px 40rpx;
}

.dialog .dialog_inner .h2 {
  text-align: center;
  font-weight: 400;
  color: #333;
}

.dialog .dialog_inner .viceTitle {
  color: #ff6810;
  line-height: 2em;
}

.dialog .dialog_inner .closeLink {
  position: absolute;
  top: 0;
  right: 0;
  padding: 30rpx;
  border-radius: 100%;
}

.dialog .dialog_inner .closeLink .close {
  height: 32rpx;
  width: 32rpx;
  background: url(http://www.17xs.org/res/images/h5/images/icon_close.png) no-repeat;
  background-size: contain;
}

.dialog .dialog_inner .knowBtn {
  display: inline-block;
  line-height: 76rpx;
  font-size: 32rpx;
  text-align: center;
  color: #ff6810;
  border: 1px solid #ff6811;
  border-radius: 80rpx;
  width: 70%;
  margin-top: 48rpx;
  margin-bottom: 4rpx;
}

.dialog-stepsIntro .mask {
  background: rgba(0, 0, 0, 0.4);
}

.dialog-stepsIntro .stepsIntro-bd {
  margin-top: 40rpx;
  text-align: left;
  font-size: 28rpx;
}

.dialog-stepsIntro .stepsIntro-bd .p {
  margin-top: 40rpx;
  text-indent: 40rpx;
}

.highlt {
  padding: 0 6rpx;
  color: #ff9001;
}

.dialog .dialog_inner .rulesList {
  margin: 32rpx auto 0;
  padding-left: 40rpx;
  line-height: 1.4em;
  text-align: left;
  font-size: 28rpx;
}

.dialog .dialog_inner .rulesList .li {
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.dialog .dialog_inner .rulesList .li:last-child {
  margin-bottom: 0;
}

.dialog-confirm .mySteps {
  margin-top: 20px;
  color: #999;
  line-height: 1.1em;
}

.dialog-confirm .mySteps-num {
  position: relative;
  top: 4rpx;
  font-size: 30px;
  font-weight: 700;
  color: #ff6810;
}

.dialog-confirm .match-enterprise-logo {
  margin: 10px 0;
  height: 50px;
  border-radius: 100%;
  width: 50px;
  padding: 10rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.06);
  border: 1px solid #eaeaea;
}

.dialog-confirm .match-enterprise-info {
  font-size: 28rpx;
}

.runsteps_dialog .h2 {
  margin-top: 0.2rem;
  font-size: 28rpx;
}

.run_area, .run_area .run_progress_area {
  position: relative;
}

.run_area {
  margin: 10px auto 0;
  width: 220px;
  min-height: 90px;
  background: url(http://www.17xs.org/res/images/h5/images/donateStep/runProgress.png) no-repeat;
  background-size: 160px 206px;
  background-position: center -110px;
}

.run_area .run_progress_area .run_pic_progress_area {
  position: relative;
  width: 160px;
  height: 90px;
  margin: 0 auto;
}

.run_area .run_progress_area .run_pic_progress_area::before {
  content: '';
  width: 20px;
  height: 20px;
  background: #f15713;
  position: absolute;
  z-index: 11;
  left: 0;
  top: 70px;
  border-radius: 100%;
}

.run_area .run_progress_area .run_pic_progress_area .run_pic_progress_in {
  width: 160px;
  height: 80px;
  overflow: hidden;
  position: relative;
}

.run_area .run_progress_area .run_pic_progress_area .run_pic_progress_in .run_pic_progress {
  left: 0;
  transform: rotate(0);
  transform-origin: 50% 100%;
  width: 160px;
  height: 80px;
  position: relative;
  overflow: hidden;
}

.run_area .run_progress_area .run_pic_progress_area .run_pic_progress_in .run_pic_progress::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  box-sizing: border-box;
  height: 200%;
  border-top: 20px solid #f15713;
  border-left: 20px solid #f15713;
  border-right: 20px solid #f15713;
  border-bottom: 20px solid transparent;
  border-radius: 100%;
}

.run_area .run_progress_area .run_pic_progress_area .run_pic_people {
  transform-origin: 400% 50%;
  transform: rotate(0);
  width: 20px;
  height: 20px;
  background: #f15713;
  position: absolute;
  z-index: 11;
  left: 0;
  top: 70px;
  border-radius: 100%;
}

.run_area .run_progress_area .run_pic_progress_area .run_pic_people .b {
  display: block;
  width: 100%;
  height: 100%;
  background: url(http://www.17xs.org/res/images/h5/images/donateStep/runProgress.png) no-repeat;
  background-position: -36px -96px;
  background-size: 160px 206px;
  transform: rotate(-90deg);
}

.run_area .run_num_area {
  width: 100px;
  text-align: center;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate3d(-50%, 0, 0);
}

.run_area .run_num_area .run_num {
  color: #b1b1b1;
  font-size: 12px;
  white-space: nowrap;
}

.run_area .run_num_area .run_num .run_num_inner {
  font-size: 20px;
  color: #f15713;
  line-height: 1.4em;
}

.run_area .run_num_area .run_desc {
  font-size: 12px;
  color: #505050;
  white-space: nowrap;
}

.run_area .run_text_num {
  position: absolute;
  color: #999;
  font-size: 12px;
  top: 75px;
}

.run_area .run_start_num {
  left: 12px;
}

.run_area .run_end_num {
  right: -12px;
}

.run_area .run_text_area {
  margin-top: 20px;
  text-align: center;
  min-height: 18px;
}

.run_area .run_text_area p {
  font-size: 16px;
  white-space: nowrap;
}

.mask2 {
  width: 100%;
  background: rgba(0, 0, 0, 0.1);
  text-align: center;
  position: fixed;
  top: 0;
}

.mask2 image {
  width: 150px;
  height: 150px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -75px;
  margin-left: -75px;
}

/*动画*/

@keyframes a-dialog-in {
  0% {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) rotateY(-90deg);
  }

  100% {
    opacity: 1;
    transform: translate3d(-50%, -50%, 0) rotateY(0);
  }
}

@keyframes a-dialog-out {
  0% {
    transform: translate3d(-50%, -50%, 0) scale(1);
  }

  100% {
    transform: translate3d(-50%, -50%, 0) scale(0.8);
  }
}

@keyframes a-dialog-mask-out {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}
