/* pages/record/record.wxss */

.pageContainer {
  position: relative;
  box-sizing: border-box;
  min-height: 100%;
  padding-bottom: 54px;
  height: auto;
}

.charityWalker {
  min-height: 100%;
  margin-bottom: -58px;
  display: flex;
  flex-direction: column;
}

.charityWalker::after {
  content: '';
  display: block;
  height: 58px;
}

.charityWalker .content {
  text-align: center;
  width: 100%;
}

.yx-hd {
  height: 40px;
  line-height: 40px;
  background: #f4f4f4;
  color: #666;
  border-bottom: 1px solid #e5e5e5;
  box-shadow: 0.5px 0.87px 0 0 rgba(0, 0, 0, 0.039);
  text-align: left;
  width: 100%;
}

.yx-hd .h4 {
  font-size: 24rpx;
  margin-left: 44rpx;
}

.yx-hd .h4 text {
  color: #ff6810;
}

.yx-bd .record-list {
  margin-left: 52rpx;
  margin-right: 32rpx;
  margin-top: 20rpx;
  padding-left: 10px;
  border-left: 1px solid #e6e6e6;
  text-align: left;
}

.yx-bd .record-list navigator {
  display: block;
}

.yx-bd .record-list .li {
  position: relative;
  margin-bottom: 54rpx;
  margin-top: -5rpx;
  color: #505050;
}

.yx-bd .record-list .li::after {
  content: " ";
  height: 1px;
  background: #000;
  opacity: 0.1;
  transform: scaleY(0.5);
  display: block;
  margin-top: 20rpx;
}

.yx-bd .record-list .li .h4 {
  margin: 0;
}

.yx-bd .record-list .li .listContentWrapper {
  position: relative;
}

.yx-bd .record-list .li .leftIcon {
  background-image: url(http://mat1.gtimg.com/gongyi/act/yxj/2016/sprites.png);
  background-position-x: -271px;
  background-position-y: -75px;
  background-size: 293px 160px;
  position: absolute;
  left: -15px;
  width: 10px;
  height: 10px;
  display: block;
  top: 2px;
}

.yx-bd .record-list .li .title {
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 16rpx;
}

.yx-bd .record-list .li .date {
  color: #b2b2b2;
  font-size: 24rpx;
  line-height: 14px;
  margin-bottom: 40rpx;
}

.yx-bd .record-list .li .rightArr {
  position: absolute;
  right: 20rpx;
  top: 30%;
  transform: rotate(45deg);
  width: 20rpx;
  height: 20rpx;
  display: block;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

.yx-bd .record-list .li .item-pic {
  float: left;
  width: 140rpx;
  height: 94rpx;
  border-radius: 4px;
  overflow: hidden;
}

.yx-bd .record-list .li .item-pic image {
  width: 100%;
  height: 100%;
}

.yx-bd .record-list .li .item-info {
  margin-left: 160rpx;
}

.yx-bd .record-list .li .item-info .pp {
  line-height: 1.2em;
  margin-bottom: 18rpx;
  font-size: 24rpx;
  position: relative;
  width: 80%;
}

.yx-bd .record-list .li .item-info .active_tag {
  margin-left: 10px;
  opacity: 0;
  background: #da3724;
  color: #fff;
  border-radius: 14px;
  padding: 1px 8px;
}

.yx-bd .record-list .li .item-info .num {
  color: #ff6810;
}

.yx-bd .record-list .li .item-info .pp .sup {
  display: inline-block;
  width: 6rpx;
  height: 16rpx;
  border-top: 1px solid #505050;
  border-left: 1px solid #505050;
  position: relative;
  top: -8rpx;
  margin-right: 6rpx;
}

.yx-bd .record-list .li .item-info .pp .sub {
  display: inline-block;
  width: 6rpx;
  height: 16rpx;
  border-bottom: 1px solid #505050;
  border-right: 1px solid #505050;
  position: relative;
  bottom: -4rpx;
  margin-left: 6rpx;
}

.yx-bd .record-list .li.active .leftIcon {
  background: #da3724;
  border-radius: 100%;
}

.yx-bd .record-list .li.active .item-info .active_tag {
  opacity: 1;
}

.loadmore {
  display: inline-block;
  width: 50%;
  margin: 10px 25%;
  text-align: center;
  color: #ff6810;
  font-size: 28rpx;
}

.loadmore.no {
  color: #999;
}
