/*弹出框*/

.dialog {
  text-align: center;
  position: fixed;
  z-index: 100;
  display: none;
}

.dialog.show {
  display: block;
  perspective: 1800rpx;
}

.dialog.hide {
  animation: a-dialog-mask-out 0.2s ease both;
}

.dialog, .dialog .mask {
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.dialog .mask {
  position: absolute;
  background: rgba(0, 0, 0, 0.7);
}

.dialog .dialog_inner {
  padding: 48rpx 40rpx;
  background: #fff;
  width: 85%;
  box-sizing: border-box;
  max-width: 500px;
  border-radius: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0) rotateY(-90deg);
}

.dialog.show .dialog_inner {
  animation: a-dialog-in 0.4s ease 0.1s both;
}

.dialog.hide .dialog_inner {
  animation: a-dialog-out 0.2s ease both;
}

