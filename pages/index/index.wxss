.ds-bd .bd-effect .effect-list .effect-item:nth-child(1) .rank-num text,
.ds-bd .bd-effect .effect-list .effect-item:nth-child(2) .rank-num text,
.ds-bd .bd-effect .effect-list .effect-item:nth-child(3) .rank-num text {
  display: block;
  position: relative;
  width: 48rpx;
  height: 48rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: 700;
  border-width: 8rpx;
  border-style: solid;
  border-radius: 100%;
}

.ds-bd .bd-effect .effect-list .effect-item:nth-child(1) .rank-num text {
  border-color: #fc0;
  color: #ffa800;
  background: #fff9df;
}

.ds-bd .bd-effect .effect-list .effect-item:nth-child(2) .rank-num text {
  border-color: #cfcece;
  color: #bbb;
  background: #f3f3f3;
}

.ds-bd .bd-effect .effect-list .effect-item:nth-child(3) .rank-num text {
  border-color: #dfb06e;
  color: #d2a462;
  background: #ffe4be;
